#include<iostream.h>
using namespace std;
int  main()
{int i,j;
//Upper half Part of diamond
for(i=1;i<=5;i++)
	{
	for(j=1;j<=5;j++)
	 {
     if((i+j)>=6)
    cout<<"* ";
     else
  cout<<" ";//Remember:-put single space inside double quotes
	 }
cout<<"\n";
	}
//Lower half Part of diamond
	for(i=1;i<=5;i++)
	{
	for(j=1;j<=4;j++)
	 {
    if(i<=j)
    cout<<" *";
     else
 cout<<" ";//Remember:-put single space inside double quotes
}
cout<<"\n";
}
}
